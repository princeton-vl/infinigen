# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,*.mak}]
indent_size = 1
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{Makefile,*.sh,*.yml}]
indent_size = 2